# Database Configuration
DATABASE_URL=postgresql://app_service:password@localhost:5432/incogni_gift

# Better Auth Configuration
BETTER_AUTH_SECRET=change-me-in-production-generate-a-secure-random-string
BETTER_AUTH_URL=http://localhost:3000
NEXT_PUBLIC_BETTER_AUTH_URL=http://localhost:3000/api/auth

# SMTP Configuration for Magic Link Emails
# For Gmail: use smtp.gmail.com with port 587
# For SendGrid: use smtp.sendgrid.net with port 587
# For other providers: check their SMTP documentation
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-smtp-password-or-app-password
SMTP_FROM="IncogniGift <noreply@example.com>"

# Local Development Auth Bypass
# WARNING: Only works when NEXT_PUBLIC_ENVIRONMENT=local AND NEXT_PUBLIC_SKIP_AUTH=true (both required)
# This bypasses SMTP authentication for local development only
# In production, NEXT_PUBLIC_ENVIRONMENT should never be set to "local"
# These use NEXT_PUBLIC_ prefix to be accessible in both server and client code
NEXT_PUBLIC_ENVIRONMENT=local
NEXT_PUBLIC_SKIP_AUTH=true
